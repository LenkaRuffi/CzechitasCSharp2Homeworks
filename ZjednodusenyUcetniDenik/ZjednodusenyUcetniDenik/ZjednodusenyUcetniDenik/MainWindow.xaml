<Window x:Class="ZjednodusenyUcetniDenik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZjednodusenyUcetniDenik"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"      
        Title="Zjednodušený účetní deník"  Icon="Diary.ico" Background="#FFD4D4D1">   


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>           
        </Grid.RowDefinitions>
       
       
        <Menu>
            <MenuItem Header="Menu">
                <MenuItem Header="Přidat příjem" />
                <MenuItem Header="Přidat výdaj" />
                <MenuItem Header="Smazat vybranou položku" />
                <MenuItem Header="Editovat vybranou položku" />
                <Separator />
                <MenuItem Header="Export vybraných položek" />
                <Separator />
                <MenuItem Header="Ukončit aplikaci" />
            </MenuItem>
        </Menu>
       

        <Grid Grid.Row="1" Margin="10,10">

            <Grid.RowDefinitions>            
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>      
                <ColumnDefinition Width="auto"/>               
                <ColumnDefinition Width="*"/>               
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="160"/>
                   
                </Grid.ColumnDefinitions>


                <Label Content="Číslo dokladu" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10" />
                <TextBox Name="InvoiceNumberTextBox" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Height="20" TextAlignment="Center"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="150" Margin="0,10"/>
              
                <Label Content="Popis dokladu" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10"/>                    
                <TextBox Name="InvoiceDescriptionTextBox" Grid.Row="0" Grid.Column="3" Height="20" TextAlignment="Center"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="150" Margin="0,10" HorizontalAlignment="Left"/>
                              
                <Label Content="Kategorie položky" Grid.Row="0" Grid.Column="4" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10"/>                    
                <TextBox Name="ItemCategoryTextBox"  Grid.Row="0" Grid.Column="5" HorizontalAlignment="Left" Height="20"  Grid.ColumnSpan="3" TextAlignment="Center"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="340"/>
               
                <Label Content="DUZP" Grid.Row="1" Grid.Column="0"  HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10"/>                   
                <DatePicker Name="InvoiceDateDatePicker" Grid.Row="1" Grid.Column="1" Margin="0,10" HorizontalAlignment="Left" />
             
                <Label Content="Datum splatnosti" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10"/>
                <DatePicker Name="DueDateDatePicker" Grid.Row="1" Grid.Column="3" Margin="0,10" HorizontalAlignment="Left" />
             
                <Label Content="Datum úhrady" Grid.Row="1" Grid.Column="4"  HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10"/>
                <DatePicker Name="PaymentDateDatePicker" Grid.Row="1" Grid.Column="5" Margin="0,10" HorizontalAlignment="Left" />
              
                <Label Content="Protistrana:" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" />               
                
                <Label Content="Název" Grid.Row="3" Grid.Column="0"  HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10"/>                    
                <TextBox Name="CounterpartyNameTextBox" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" Height="20" TextAlignment="Center"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="150"  Margin="0,10"/>

                <Label Content="IČ" Grid.Row="3" Grid.Column="2"  HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10"/>
                <TextBox Name="CounterpartyIdentificateNumberTextBox" Grid.Row="3" Grid.Column="3" HorizontalAlignment="Left" Height="20" TextAlignment="Center"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="150" Margin="0,10"/>
                
                <Label Content="DIČ" Grid.Row="3" Grid.Column="4" HorizontalAlignment="Left"  VerticalAlignment="Center" Margin="0,10"/>
                <TextBox Name="CounterpartyTaxIdentityNumberTextBox" Grid.Row="3" Grid.Column="5"  HorizontalAlignment="Left" Height="20" TextAlignment="Center"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="150" Margin="0,10"/>

                <Label Content="Ulice"  Grid.Row="4" Grid.Column="0"  HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10"/>                    
                <TextBox Name="CounterpartyAddressStreetTextBox" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left" Height="20" TextAlignment="Center"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="150" Margin="0,10"/>

                <Label Content="PSČ" Grid.Row="4" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10"/>  
                <TextBox Name="CounterpartyAddressZipCodeTextBox" Grid.Row="4" Grid.Column="3"  HorizontalAlignment="Left" Height="20" TextAlignment="Center"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="150"  Margin="0,10"/>

                <Label Content="Město" Grid.Row="4" Grid.Column="4" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10"/>     
                <TextBox Name="CounterpartyAddressTownTextBox" Grid.Row="4" Grid.Column="5" HorizontalAlignment="Left" Height="20" TextAlignment="Center"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="150"  Margin="0,10"/>

                <Label Content="Stát" Grid.Row="4" Grid.Column="6" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10"/>                    
                <TextBox Name="CounterpartyAddressStateTextBox" Grid.Row="4" Grid.Column="7"  HorizontalAlignment="Left" Height="20" TextAlignment="Center"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="150"  Margin="0,10"/>

                <Label Content="Suma příjmů"  Grid.Row="5" Grid.Column="0" TextBlock.FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center"  Margin="0,10"/>
                <TextBox Name="IncomeSumTextBox" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left" Height="20" TextAlignment="Center"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="150" IsEnabled="False"  Margin="0,10"/>

                <Label Content="Suma výdajů" Grid.Row="5" Grid.Column="2" TextBlock.FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,10"/>                   
                <TextBox Name="CostSumTextBox" Grid.Row="5" Grid.Column="3" HorizontalAlignment="Left" Height="20" TextAlignment="Center" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="150" IsEnabled="False" Margin="0,10"/>

            </Grid>

             <Button Name="buttonFiltering"  Grid.Row="1" Grid.Column="2" Width="100" Content="Filtrovat" VerticalAlignment="Center" HorizontalAlignment="Right" Click="buttonFiltering_Click" Margin="0,10"/>

             <ListBox Name="ItemListBox" Grid.Column="0" Grid.Row="2"  Grid.ColumnSpan="2"  ItemsSource="{Binding Osoby}"/>

        </Grid>      
        
    </Grid>
</Window>
