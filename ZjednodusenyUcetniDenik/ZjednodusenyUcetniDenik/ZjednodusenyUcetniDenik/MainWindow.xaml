<Window x:Class="ZjednodusenyUcetniDenik.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZjednodusenyUcetniDenik"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"      
        Title="Zjednodušený účetní deník"  Icon="Diary.ico" Background="#FFD4D4D1">   


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>           
        </Grid.RowDefinitions>
       
       
        <Menu>
            <MenuItem Header="Menu">
                <MenuItem Header="Přidat příjem" />
                <MenuItem Header="Přidat výdaj" />
                <MenuItem Header="Smazat vybranou položku" />
                <MenuItem Header="Editovat vybranou položku" />
                <Separator />
                <MenuItem Header="Export vybraných položek" />
                <Separator />
                <MenuItem Header="Ukončit aplikaci" />
            </MenuItem>
        </Menu>
       

        <Grid Grid.Row="1" Margin="10,10">

            <Grid.RowDefinitions>            
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>      
                <ColumnDefinition Width="auto"/>               
                <ColumnDefinition Width="*"/>               
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="160"/>
                   
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="0,10">
                    <Label Content="Číslo dokladu" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Right" />                    
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,10">
                    <TextBox Name="InvoiceNumberTextBox" HorizontalAlignment="Center" Height="20" TextAlignment="Center"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="150"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" Margin="0,10">                   
                    <Label Content="Popis dokladu" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Right"/>                    
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="3" Orientation="Horizontal" Margin="0,10" HorizontalAlignment="Stretch" >                   
                    <TextBox Name="InvoiceDescriptionTextBox" Height="20" TextAlignment="Center"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="150"/>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="4" Orientation="Horizontal" Margin="0,10">                    
                    <Label Content="Kategorie položky" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Right"/>                    
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="5" Orientation="Horizontal" Margin="0,10">
                    <TextBox Name="ItemCategoryTextBox" HorizontalAlignment="Center" Height="20"  Grid.ColumnSpan="3" TextAlignment="Center"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="350"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,10">
                    <Label Content="DUZP" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Right"/>                   
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="0,10">                    
                    <DatePicker Name="InvoiceDateDatePicker"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" Margin="0,10">                    
                    <Label Content="Datum splatnosti" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Right"/>                   
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="3" Orientation="Horizontal" Margin="0,10">                    
                    <DatePicker Name="DueDateDatePicker"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="4" Orientation="Horizontal" Margin="0,10">                    
                    <Label Content="Datum úhrady" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Right"/>                    
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="5" Orientation="Horizontal" Margin="0,10">                    
                    <DatePicker Name="PaymentDateDatePicker"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Grid.ColumnSpan="2">
                    <Label Content="Protistrana:" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </StackPanel>
                
                <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" Margin="0,10">
                    <Label Content="Název" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Right"/>                    
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,10">                    
                    <TextBox Name="CounterpartyNameTextBox" HorizontalAlignment="Center" Height="20" TextAlignment="Center"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="150"/>
                </StackPanel>


                <StackPanel Grid.Row="3" Grid.Column="2" Orientation="Horizontal" Margin="0,10">
                    <Label Content="IČ" HorizontalAlignment="Center" VerticalAlignment="Center"  HorizontalContentAlignment="Right"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="3" Orientation="Horizontal" Margin="0,10">
                    <TextBox Name="CounterpartyIdentificateNumberTextBox" HorizontalAlignment="Center" Height="20" TextAlignment="Center"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="150"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="4" Orientation="Horizontal" Margin="0,10">
                    <Label Content="DIČ" HorizontalAlignment="Center"  VerticalAlignment="Center" HorizontalContentAlignment="Right"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="5" Orientation="Horizontal" Margin="0,10">
                    <TextBox Name="CounterpartyTaxIdentityNumberTextBox" HorizontalAlignment="Center" Height="20" TextAlignment="Center"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="150"/>
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.Column="0" Orientation="Horizontal" Margin="0,10">                    
                    <Label Content="Ulice" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Right"/>                    
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="0,10">                    
                    <TextBox Name="CounterpartyAddressStreetTextBox" HorizontalAlignment="Center" Height="20" TextAlignment="Center"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="150"/>
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.Column="2" Orientation="Horizontal" Margin="0,10">                    
                    <Label Content="PSČ" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Right"/>                   
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.Column="3" Orientation="Horizontal" Margin="0,10">                    
                    <TextBox Name="CounterpartyAddressZipCodeTextBox" HorizontalAlignment="Center" Height="20" TextAlignment="Center"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="150"/>
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.Column="4" Orientation="Horizontal" Margin="0,10">                   
                    <Label Content="Město" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Right"/>                    
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.Column="5" Orientation="Horizontal" Margin="0,10">                    
                    <TextBox Name="CounterpartyAddressTownTextBox" HorizontalAlignment="Center" Height="20" TextAlignment="Center"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="150"/>
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.Column="6" Orientation="Horizontal" Margin="0,10">
                    <Label Content="Stát" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Right"/>                    
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.Column="7" Orientation="Horizontal" Margin="0,10">
                    <TextBox Name="CounterpartyAddressStateTextBox" HorizontalAlignment="Center" Height="20" TextAlignment="Center"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="150"/>
                </StackPanel>

                <StackPanel Grid.Row="5" Grid.Column="0" Orientation="Horizontal" Margin="0,10">
                    <Label Content="Suma příjmů"  TextBlock.FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"  HorizontalContentAlignment="Right"/>
                </StackPanel>

                <StackPanel Grid.Row="5" Grid.Column="1" Orientation="Horizontal" Margin="0,10">                   
                    <TextBox Name="IncomeSumTextBox" HorizontalAlignment="Center" Height="20" TextAlignment="Center"  TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="150" IsEnabled="False"/>
                </StackPanel>

                <StackPanel Grid.Row="5" Grid.Column="2" Orientation="Horizontal" Margin="0,10">                    
                    <Label Content="Suma výdajů" TextBlock.FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Right"/>                   
                </StackPanel>

                <StackPanel Grid.Row="5" Grid.Column="3" Orientation="Horizontal" Margin="0,10">                   
                    <TextBox Name="CostSumTextBox" HorizontalAlignment="Center" Height="20" TextAlignment="Center" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="150" IsEnabled="False"/>
                </StackPanel>


            </Grid>


            <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
                <Button Name="buttonFiltering" Width="100" Content="Filtrovat" VerticalAlignment="Center" Click="buttonFiltering_Click" />
            </StackPanel>

            <ListBox Name="ItemListBox" Grid.Column="0" Grid.Row="2"  Grid.ColumnSpan="2"  ItemsSource="{Binding Osoby}"/>

        </Grid>      
        
    </Grid>
</Window>
